        <div id='map' class="col-sm-6" style="height: 400px;"></div>
        <!--<div id='map' style='width: 800px; height: 500px;'></div>-->

        <div class="todoList col-sm-6">
            <h2>TodoList</h2>

            <form id="placeForm" method="post"  action="/places" > <!--method="post"  action="/places"-->
