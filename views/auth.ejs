<% include ./partials/head.ejs %>
<div class="container-fluid bg-1">
<div id="userPlaces1" class="container-fluid break">
    <div class="row">
        <div id='map' class="col-sm-6 mapTodo bg-2" style="height: 400px;"></div>
        
        <!--<div id='map' style='width: 800px; height: 500px;'></div>-->
    </div>
    <div class="row">
        <div class="todoList col-sm-6 mapTodo bg-2">
            <hr>
            <h2>Todo List</h2>

            <form id="placeForm" method="post"  action="/places" > <!--method="post"  action="/places"-->
                <div class="form-group">
                    <input type="text" class="form-control" id="place" placeholder="Try a place you've never seen" name="place">
                </div>
            
                <div class="form-check">
                    <small class="form-check-label" for="exampleCheck1">Already been there?</small>
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="beenThere" value="TRUE">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>   
</div>

<div id="userPlaces" class="container-fluid">
    <div class="row">
        <div class="col-sm-6 subs bg-2">
            <h2 class="subheader">Todo</h2>
            <div id="todoPlaces"> 
        
            </div>
        </div>
        <div class="col-sm-6 subs bg-2">   
            <h2 class="subheader">Complete</h2> 
            <div id="completePlaces">
        
            </div>
        </div>
    </div>
</div>
</div>

